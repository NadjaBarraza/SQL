-- ============================================
-- Superstore SQL Analysis Project
-- ============================================
-- This project analyzes a retail Superstore dataset
-- using SQL to explore pricing trends, category-level
-- statistics, and inventory insights.
-- ============================================


-- Create Superstore Table
CREATE TABLE superstore (
    item_id INTEGER PRIMARY KEY,
    item_name TEXT,
    category TEXT,
    price DECIMAL(10, 2),
    stock_quantity INTEGER,
    average_rating DECIMAL(3, 2)
);

-- Insert Sample Data into Superstore Table
INSERT INTO superstore (item_id, item_name, category, price, stock_quantity, average_rating)
