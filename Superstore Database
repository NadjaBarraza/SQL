-- ============================================
-- 1. Order Items by Price (Highest to Lowest)
-- ============================================
-- This query helps identify premium vs. low-cost products.
SELECT item_name, price
FROM superstore
ORDER BY price DESC;


-- ============================================
-- 2. Overall Average Item Price
-- ============================================
-- Calculates the average price across all store items.
SELECT AVG(price) AS avg_price
FROM superstore;


-- ============================================
-- 3. Average Price for Kitchen Supplies
-- ============================================
-- Filters by category to analyze a specific product segment.
SELECT AVG(price) AS avg_kitchen_price
FROM superstore
WHERE category = 'Kitchen Supplies';


-- ============================================
-- 4. Identify Low-Stock Items (Inventory Risk)
-- ============================================
-- Counts how many items have fewer than 30 units in stock.
SELECT COUNT(*) AS low_stock_items
FROM superstore
WHERE stock_quantity < 30;


-- ============================================
-- 5. List Low-Stock Products
-- ============================================
-- Shows which specific products may need restocking.
SELECT item_name, stock_quantity
FROM superstore
WHERE stock_quantity < 30
ORDER BY stock_quantity ASC;
